(* Integer Line MDP *)
(* First example of https://agentmodels.org/chapters/3a-mdp.html *)


let node agent (score, ()) = (score', p) where
  rec action = (Random.int 3) - 1
  and p = 0 -> pre p + action
  and score' = score +. 100. *. exp (float (- abs (p - 10)))

