open Distribution
open Mountain_world

let node model (prob, (map, state_init)) = state where
  rec state = state_init fby transition map state action
  and action = Infer_pf.sample (prob, uniform_list (possible_actions map state))
  and () = Infer_pf.factor(prob, utility map state action)

let random_init = Random.self_init ()

let node main () =
  let state = Infer_pf.plan 30 5 model (map, state_init) in
  print map state;
  draw map state
