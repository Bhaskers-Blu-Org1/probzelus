open Distribution
open Mountain_world

let node model (prob, (map, state_init)) = state where
  rec state = state_init fby transition map state action
  and action = Infer.sample (prob, uniform_list (possible_actions map state))
  and () = Infer.factor(prob, utility map state action)

let node main () =
  let state = Infer.plan 30 5 model (map, state_init) in
  print map state;
  draw map state
