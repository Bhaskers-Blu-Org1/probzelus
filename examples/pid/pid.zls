(* A probabilistic PID controller *)

let sample dist = Distribution.draw dist
let factor (score, x) = score +. x

let node deriv(u) = o where
  rec x = u
  and o = 0.0 -> (x -. pre(x))

let node integr(u) = o where
  rec o = u fby (u +. o)

